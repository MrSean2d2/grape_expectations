            <Button minWidth="100.0" mnemonicParsing="false" onAction="#submit" text="Submit" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets top="20.0" />
               </GridPane.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="deleteButton" minWidth="100.0" mnemonicParsing="false" onAction="#delete" text="Delete" GridPane.rowIndex="1">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <GridPane.margin>
                  <Insets top="20.0" />
               </GridPane.margin>
            </Button>
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/User.png" />
                           </image>
                           <HBox.margin>
                              <Insets top="3.0" />
                           </HBox.margin>
                        </ImageView>
                        <VBox>
                           <children>
                              <Label fx:id="usernameLabel" style="-fx-font-weight: 700;" text="Edit User">
                                 <font>
                                    <Font size="26.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <Region maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
