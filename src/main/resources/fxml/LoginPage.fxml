<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0"
          prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="seng202.team5.gui.LoginPageController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1000.0" minWidth="10.0"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="100.0" prefHeight="100.0"/>
      <RowConstraints maxHeight="300.0" minHeight="300.0" prefHeight="300.0" vgrow="SOMETIMES"/>
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES"/>
   </rowConstraints>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="50.0"/>
   </padding>
   <VBox maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" GridPane.valignment="TOP">
      <Label contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
             style="-fx-font-weight: 700;" text="Log In to Grape Expectations!">
         <padding>
            <Insets left="10.0" right="10.0"/>
         </padding>
         <font>
            <Font size="24.0"/>
         </font>
      </Label>
      <Label text="Sign in to view, give ratings and add comments to your favourite wines!"
             wrapText="true">
         <padding>
            <Insets left="10.0" right="10.0" top="10.0"/>
         </padding>
         <font>
            <Font size="18.0"/>
         </font>
      </Label>
   </VBox>
   <GridPane prefWidth="980.0" GridPane.rowIndex="1">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints/>
      </rowConstraints>
      <VBox alignment="TOP_CENTER" maxWidth="400.0" prefHeight="200.0" prefWidth="100.0"
            spacing="10.0" style="-fx-border-radius: 10px; -fx-border-color: #ffffff;" GridPane.halignment="CENTER">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </GridPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <Label maxWidth="1.7976931348623157E308" text="Username"/>
         <TextField fx:id="usernameField" onKeyReleased="#enterPressed" promptText="Username"
                    styleClass="textbox"/>
         <Label maxWidth="1.7976931348623157E308" text="Password">
            <VBox.margin>
               <Insets bottom="10.0"/>
            </VBox.margin>
            <padding>
               <Insets top="20.0"/>
            </padding>
         </Label>
         <GridPane>
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0"/>
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <PasswordField fx:id="passwordField" onKeyReleased="#enterPressed" promptText="Password"
                           styleClass="textbox"/>
            <TextField fx:id="passwordVisibleField" onKeyReleased="#enterPressed" promptText="Password"
                       styleClass="textbox" visible="false"/>
            <ImageView fx:id="toggleVisibility" fitHeight="30.0" fitWidth="157.0"
                       onMouseClicked="#togglePasswordVisibility" pickOnBounds="true" preserveRatio="true"
                       styleClass="specialIcon" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <Image url="@../images/ClosedEye.png"/>
            </ImageView>
         </GridPane>
         <Label fx:id="errorLabel" maxWidth="1.7976931348623157E308" prefHeight="30.0"
                styleClass="warningText" text="Error" textFill="#d05b5b">
            <padding>
               <Insets bottom="20.0" top="20.0"/>
            </padding>
         </Label>
         <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" minWidth="200.0" mnemonicParsing="false"
                 onAction="#attemptLogin" prefHeight="25.0" text="Log In">
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
         </Button>
      </VBox>
   </GridPane>
   <GridPane GridPane.rowIndex="2">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <Button fx:id="registerButton" maxWidth="400.0" minWidth="200.0" mnemonicParsing="false"
              onAction="#goToRegister" prefHeight="25.0" text="Don't have an account? Register now"
              GridPane.halignment="CENTER" GridPane.valignment="TOP">
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <GridPane.margin>
            <Insets top="20.0"/>
         </GridPane.margin>
      </Button>
   </GridPane>
</GridPane>
