<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0"
          prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="seng202.team5.gui.RegisterPageController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1000.0" minWidth="10.0"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="100.0" prefHeight="100.0"/>
      <RowConstraints maxHeight="380.0" minHeight="380.0" prefHeight="380.0" vgrow="SOMETIMES"/>
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
   </rowConstraints>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="50.0"/>
   </padding>
   <VBox maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" GridPane.valignment="TOP">
      <Label contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
             style="-fx-font-weight: 700;" text="Sign Up to Grape Expectations!">
         <padding>
            <Insets left="10.0" right="10.0"/>
         </padding>
         <font>
            <Font size="24.0"/>
         </font>
      </Label>
      <Label
              text="Register an account to view, give ratings and add comments to your favourite wines!"
             wrapText="true">
         <padding>
            <Insets left="10.0" right="10.0" top="10.0"/>
         </padding>
         <font>
            <Font size="18.0"/>
         </font>
      </Label>
   </VBox>
   <GridPane prefHeight="356.0" prefWidth="980.0" GridPane.halignment="CENTER"
             GridPane.rowIndex="1">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <VBox alignment="TOP_CENTER" maxWidth="400.0" prefHeight="292.0" spacing="10.0"
            style="-fx-border-radius: 10px; -fx-border-color: #ffffff;" GridPane.halignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <Label maxWidth="1.7976931348623157E308" text="Username"/>
         <TextField fx:id="usernameField" onKeyReleased="#enterPressed" promptText="Username"
                    styleClass="textbox"/>
         <Label ellipsisString="-" maxWidth="1.7976931348623157E308" prefHeight="99.0" prefWidth="377.0"
                text="* Password must be 8 - 20 characters long and contain: a letter, a number, and a special character"
                textAlignment="CENTER" wrapText="true"/>
         <Label maxWidth="1.7976931348623157E308" text="Password">
            <padding>
               <Insets bottom="10.0"/>
            </padding>
         </Label>
         <GridPane>
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0"/>
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <PasswordField fx:id="passwordField" onKeyReleased="#enterPressed" promptText="Password"
                           styleClass="textbox"/>
            <TextField fx:id="passwordVisibleField" onKeyReleased="#enterPressed" promptText="Password"
                       styleClass="textbox" visible="false"/>
            <ImageView fx:id="toggleVisibility" fitHeight="30.0" fitWidth="157.0"
                       onMouseClicked="#togglePasswordVisibility" pickOnBounds="true" preserveRatio="true"
                       styleClass="specialIcon" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <Image url="@../images/ClosedEye.png"/>
            </ImageView>
         </GridPane>
         <Label maxWidth="1.7976931348623157E308" text="Confirm Password">
            <padding>
               <Insets top="20.0"/>
            </padding>
            <VBox.margin>
               <Insets bottom="10.0"/>
            </VBox.margin>
         </Label>
         <GridPane>
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0"/>
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <PasswordField fx:id="repeatPasswordField" onKeyReleased="#enterPressed"
                           promptText="Confirm Password" styleClass="textbox"/>
            <TextField fx:id="repeatPasswordVisibleField" onKeyReleased="#enterPressed"
                       promptText="Confirm Password" styleClass="textbox" visible="false"/>
            <ImageView fx:id="toggleRepeatVisibility" fitHeight="30.0" fitWidth="157.0"
                       onMouseClicked="#toggleRepeatPasswordVisibility" pickOnBounds="true"
                       preserveRatio="true" styleClass="specialIcon" GridPane.columnIndex="1"
                       GridPane.halignment="RIGHT">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <Image url="@../images/ClosedEye.png"/>
            </ImageView>
         </GridPane>
         <Label fx:id="errorLabel" maxWidth="1.7976931348623157E308"
                minHeight="-Infinity" prefHeight="29.0" prefWidth="377.0" styleClass="warningText" text="Error"
                textFill="#d05b5b" wrapText="true"/>
         <Button fx:id="registerButton" maxWidth="1.7976931348623157E308" minWidth="200.0" mnemonicParsing="false"
                 onAction="#attemptRegister" prefHeight="25.0" text="Register Account">
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
         </Button>
      </VBox>
   </GridPane>
   <GridPane GridPane.rowIndex="2">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <Button fx:id="loginButton" maxWidth="400.0" minWidth="200.0" mnemonicParsing="false" onAction="#goToLogin"
              prefHeight="25.0" text="Already have an account? Log in" GridPane.halignment="CENTER"
              GridPane.valignment="TOP">
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <GridPane.margin>
            <Insets top="20.0"/>
         </GridPane.margin>
      </Button>
   </GridPane>
</GridPane>
